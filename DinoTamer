function getRandomInt(max) {
  return Math.floor(Math.random() * max);
}

function shuffle(array) {
  for (let i = array.length - 1; i > 0; i--) {
    const j = getRandomInt(i + 1);
    [array[i], array[j]] = [array[j], array[i]];
  }
  return array;
}

let currentWord;

function generateQuestion() {
  const questionDiv = document.getElementById("question");
  const choicesDiv = document.getElementById("choices");
  const resultDiv = document.getElementById("result");
  resultDiv.textContent = "";

  currentWord = vocabulary[getRandomInt(vocabulary.length)];
  questionDiv.textContent = `What does "${currentWord.norwegian}" mean?`;

  let options = [currentWord.english];

  while (options.length < 4) {
    const random = vocabulary[getRandomInt(vocabulary.length)].english;
    if (!options.includes(random)) options.push(random);
  }

  shuffle(options);
  choicesDiv.innerHTML = "";
  options.forEach((option) => {
    const btn = document.createElement("button");
    btn.textContent = option;
    btn.onclick = () => {
      if (option === currentWord.english) {
        resultDiv.textContent = "✅ Correct!";
      } else {
        resultDiv.textContent = `❌ Wrong! It means "${currentWord.english}"`;
      }
      setTimeout(generateQuestion, 2000);
    };
    choicesDiv.appendChild(btn);
  });
}

window.onload = generateQuestion;
