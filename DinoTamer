  </style>
</head>
<body>
  <h1>Norwegian Multiple Choice Quiz</h1>
  <div class="question" id="question"></div>
  <div class="choices" id="choices"></div>
  <div class="result" id="result"></div>
  <script src="vocab.js"></script>
  <script src="quiz.js"></script>
</body>
