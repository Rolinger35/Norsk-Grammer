// vocab.js
const vocabulary = [
  { norwegian: "hund", english: "dog" },
  { norwegian: "katt", english: "cat" },
  { norwegian: "hus", english: "house" },
  { norwegian: "spise", english: "to eat" },
  { norwegian: "drikke", english: "to drink" }
];
<!DOCTYPE html>
